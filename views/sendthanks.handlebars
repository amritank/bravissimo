<header>
    <section id="nav-bar">
        <nav class="navbar navbar-expand-lg navbar-light justify-content-between">
            <a class=" navbar-brand grey-qo-regular" style="font-size: 48px" href="#">BraviSSimo</a>
            <div class="navbar-nav">
                <a class="nav-link" id="logout" href="#">Logout</a>
            </div>

        </nav>
    </section>

</header>
<main>
    <div id="mainContainer" class="container custom-container mt-5 mb-5 custom-gutter">
        <div class="row">
            {{> user-details}}
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-2 p-sm-2 ">
                {{> navbar-details}}
            </div>
            <div class="col-sm-12 col-md-9">
                <div id="alertMsgContainer"></div>
                <div id="sendThanksContainer">
                    <form id="sendThanksForm">
                        <div>
                            <label for="receiver" style="font-weight:bolder">User</label>
                            <input type="text" class="form-control w-75" id="receiver" placeholder="Search user..">
                        </div>
                        <div class="mt-3">
                            <label for="template" style="font-weight:bolder">Choose a template</label>
                            <div id="template" class="d-flex flex-row">
                                <div id="img0" class="me-2" data-img=""></div>
                                <div id="img1" class="me-2" data-img="/images/thankyou_template_1.jpg"></div>
                                <div id="img2" class="me-2" data-img="/images/thankyou_template_2.jpeg"></div>
                                <div id="img3" class="me-2" data-img="/images/thankyou_template_3.jpeg"></div>
                                <div id="img4" class="me-2" data-img="/images/thankyou_template_4.jpg"></div>
                                <div id="img5" class="me-2" data-img="/images/thankyou_template_5.jpg"></div>
                                <div id="img6" data-img="/images/thankyou_template_6.jpg"></div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label class="font-weight-bold" style="font-weight:bolder"
                                for="thankyounote">Message</label>
                            <textarea class="form-control text-dark" id="thankyounote" rows="10"
                                placeholder="Enter your message.."></textarea>
                            <div class="d-grid gap-2 col-6 mx-auto mt-3">
                                <button type="submit" class="float-end mt-2 btn btn-primary mb-2">Send
                                    Thanks</button>
                                <button type="button" id="reset" class="float-end btn btn-primary mb-1">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</main>
