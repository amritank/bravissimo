<header>
  <section id="nav-bar">
    <nav class="navbar navbar-expand-lg navbar-light justify-content-between">
      <a class=" navbar-brand grey-qo-regular" style="font-size: 48px" href="/received">BraviSSimo</a>
    </nav>
  </section>
</header>
<main>
</main>
<div class="register-background">
  <div class="register-box col-12 col-md-6">
    <h1>Create An Account</h1>
    <div id="alertMsgContainer"></div>
    <form id="register-form">
      <div class="mb-3 d-flex flex-column text-start">
        <label for="first_name" class="form-label">First Name*</label>
        <input type="text" class="form-control" id="first_name" name="first_name" placeholder="">
      </div>

      <div class="mb-3 d-flex flex-column text-start">
        <label for="last_name" class="form-label">Last Name*</label>
        <input type="text" class="form-control" id="last_name" name="last_name" placeholder="">
      </div>

      <div class="mb-3 d-flex flex-column text-start">
        <label for="email_id" class="form-label">Email Address*</label>
        <input type="email" class="form-control" id="email_id" name="email_id" placeholder="">
      </div>

      <div class="mb-3 d-flex flex-column text-start">
        <label for="password" class="form-label">Password*</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="">
      </div>
      <div class="mb-3 d-flex flex-row text-start">

        {{!-- <button type="button" id="upload_widget" class="btn border-primary mt-2" style="width:40%">Upload Profile
          Image</button> --}}
        <span id="upload_widget">Upload Profile Image</span>
        <label for="profile_img" id="profile_img" style="font-weight: normal;"
          class=" ms-2 form-label align-items-center"></label>
        {{!-- <input type="text" id="profile_img" name="profile_img" required> --}}
      </div>

      <div class="d-flex flex-column justify-content-center align-items-center">
        <button type="submit" class="btn btn-primary  col-5">Register</button>
        <button type="button" id="btn-cancel" class="btn btn-primary col-5 mt-2">Cancel</button>
      </div>

      <div class="message" id="message"></div>

  </div>
</div>
</main>

<script>
  window.CLOUDINARY_CLOUD_NAME = "{{cloudName}}";
  window.CLOUDINARY_UPLOAD_PRESET = "{{uploadPreset}}";
</script>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script src="/js/util.js"></script>
<script src="/js/register.js"></script>
